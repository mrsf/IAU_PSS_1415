<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="pt.ipleiria.estg.meicm.iaupss.estgparking.LotDetailsActivity$PlaceholderFragment"
    android:weightSum="1"
    android:background="#ffffffff">

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@drawable/rectangle"
        android:padding="4dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/detail_lot_image_view"
            android:background="#23000000"
            android:scaleType="centerCrop"
            android:padding="2dp"
            android:cropToPadding="true"
            android:layout_gravity="center" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_image_progress_bar"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center" />

    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"
        android:background="@drawable/shadow"
        android:paddingTop="8dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearance"
                android:text="Nome: "
                android:id="@+id/detail_name_text"
                android:layout_marginBottom="8dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearance"
                android:text="Lote 1"
                android:id="@+id/detail_name_text_view"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearance"
                android:text="Descrição: "
                android:id="@+id/detail_description_text"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearance"
                android:text="Situado em frente ao edifício D."
                android:id="@+id/detail_description_text_view"
                android:paddingBottom="@dimen/activity_vertical_margin" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shadow">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver no Mapa"
            android:id="@+id/show_map_lot_button"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/button_selector"
            android:clickable="true"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Secções"
            android:id="@+id/show_sections_button"
            android:background="@drawable/button_selector"
            android:clickable="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

</LinearLayout>
