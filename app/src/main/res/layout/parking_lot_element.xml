<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/hello_world"
        android:id="@+id/textViewTeste"
        style="@style/Base.TextAppearance.AppCompat.Headline"
        android:layout_alignTop="@+id/lot_image_view"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/description_text_view"
        android:layout_alignBottom="@+id/lot_image_view"
        android:layout_alignLeft="@+id/textViewTeste"
        android:layout_alignStart="@+id/textViewTeste"
        android:layout_below="@+id/textViewTeste" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:id="@+id/lot_image_view"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/textViewTeste"
        android:layout_toStartOf="@+id/textViewTeste"
        android:background="#393a40"
        android:adjustViewBounds="false"
        android:layout_margin="@dimen/abc_dropdownitem_text_padding_right"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:padding="2dp" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_progress_bar"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/lot_image_view"
        android:layout_alignEnd="@+id/lot_image_view"
        android:layout_marginRight="34dp"
        android:layout_marginEnd="34dp" />

</RelativeLayout>