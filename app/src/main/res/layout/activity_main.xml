<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:orientation="horizontal"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/main_btn_profile"
                    android:text="@string/main_btn_profile_text"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@drawable/map_marker"
                    android:paddingTop="90dp"
                    android:clickable="true"
                    android:contentDescription="@string/main_btn_profile_content_description" />

                <Button
                    android:id="@+id/main_btn_settings"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@drawable/settings"
                    android:paddingTop="90dp"
                    android:text="@string/main_btn_settings_text" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:orientation="horizontal"
                    android:layout_weight="1" >

                    <Button
                        android:id="@+id/main_btn_lots"
                        android:text="@string/main_btn_lots_text"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:background="@drawable/parking_lot"
                        android:textAlignment="viewStart"
                        android:paddingTop="90dp" />

                    <Button
                        android:id="@+id/main_btn_facebook_post"
                        android:text="@string/main_btn_facebook_post_text"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:background="@drawable/facebook"
                        android:paddingTop="90dp" />
                </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:orientation="horizontal"
                    android:layout_weight="1" >

                    <Button
                        android:id="@+id/main_btn_rankings"
                        android:text="@string/main_btn_rankings_text"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:background="@drawable/rankings"
                        android:layout_margin="0dp"
                        android:paddingTop="90dp" />

                    <Button
                        android:id="@+id/main_btn_about"
                        android:text="@string/main_btn_about_text"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:background="@drawable/about"
                        android:paddingTop="90dp" />
                </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0px"
                android:layout_height="0px">

                <ProgressBar
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/progressBar2" />
            </LinearLayout>
        </LinearLayout>

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_progressBar"
            android:layout_gravity="center"
            android:visibility="invisible" />

    </FrameLayout>


</LinearLayout>