<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="pt.ipleiria.estg.meicm.iaupss.estgparking.DropboxActivity$PlaceholderFragment"
    android:id="@+id/dropbox_relative_layout">

    <ImageButton
        android:layout_width="@dimen/fragment_dropbox_image_button_width"
        android:layout_height="@dimen/fragment_dropbox_image_button_height"
        android:id="@+id/dropbox_image_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/fragment_dropbox_image_button_content_description"
        android:background="#007ee5"
        android:focusable="true"
        android:src="@drawable/dropbox_button_image"
        android:scaleType="centerInside"
        android:clickable="true"
        android:adjustViewBounds="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_dropbox_info_text_view_text"
        android:id="@+id/dropbox_info_text_view"
        android:layout_above="@+id/dropbox_image_button"
        android:layout_alignLeft="@+id/dropbox_image_button"
        android:layout_alignStart="@+id/dropbox_image_button"
        android:layout_alignRight="@+id/dropbox_image_button"
        android:layout_alignEnd="@+id/dropbox_image_button"
        android:layout_marginBottom="@dimen/activity_vertical_margin" />
</RelativeLayout>
